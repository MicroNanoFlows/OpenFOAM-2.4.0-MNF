FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fieldPropertiesDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


dsmcFields
(
     field
     {
         fieldModel          	dsmcVolFields;
 
         timeProperties
         {
         	timeOption          write;
 	    	resetAtOutput		on;
         }
         
         dsmcVolFieldsProperties
         {
            fieldName               N2;
         	typeIds                 (N2);
         	measureMeanFreePath     true;
         	mfpReferenceTemperature 273;
         	measureErrors           true;
         }
     }
);

