FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     dsmcFoamPlus;

startFrom       latestTime;

nTerminalOutputs    1;

startTime       0;

stopAt          endTime;

endTime         100;

deltaT          7.0e-6;

writeControl    runTime;

writeInterval   7.0e-4;

purgeWrite      2;

writeFormat     ascii;

writePrecision  6;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

adjustTimeStep  no;

functions
(
    forces1
    {
        type            forces;
        enabled         true;
        functionObjectLibs ( "libforces.so" );
        outputControl   outputTime;
        patches ( "orion.*" );
        directForceDensity true;
        fDName          fD_mixture;
        CofR            ( 0 0 0 );
        log             on;
    }

    
);


