FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fieldPropertiesDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dsmcFields
(	 
    field
    {
        fieldModel	dsmcZone;

        timeProperties
        {
            timeOption		write;
            resetAtOutput	off;
        }

        dsmcZoneProperties
        {
            zoneName		dsmcZone;
            fieldName		Ar;
            typeIds		(Ar);
        }
    }

    field
    {
    	fieldModel	dsmcVolFields;
 
	timeProperties
        {
       	    timeOption          write;
	    resetAtOutput	off;
        }
         
        dsmcVolFieldsProperties
        {
            fieldName               	Ar;
            typeIds                 	(Ar);
            measureMeanFreePath     	true;
            mfpReferenceTemperature 	273;
            measureHeatFluxShearStress  true;
        }
     }  
);

